<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Camera.ListPhoroPage">

    <StackLayout>
        
        <Image/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button x:Name="GalereaBtn" Text="Галерея" BackgroundColor="SkyBlue" TextColor="White"/>
            <Button x:Name="CameraBtn" Text="Камера" BackgroundColor="SkyBlue" TextColor="White"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button x:Name="AddPhoto" Text="Добавить" BackgroundColor="SkyBlue" TextColor="White"/>
            <Button x:Name="ListPhotoBtn" Text="Список фотографий" BackgroundColor="SkyBlue" TextColor="White"/>
        </StackLayout>
    </StackLayout>
</ContentPage>